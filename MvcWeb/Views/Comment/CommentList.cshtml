@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="pt-5">
    <h3 class="mb-5">@Model.Count() Comments</h3>
    <ul class="comment-list">
        @foreach(var item in Model)
        {
        <li class="comment">
            <div class="vcard">
                <img src="https://brandresumes.com/wp-content/uploads/2019/04/Brand-Resume-Testimonial-neutral.png" alt="Image placeholder">
            </div>
            <div class="comment-body">
                <h3>@item.UserName</h3>
                <div class="meta">@(((DateTime)item.CommentDateTime).ToString("dd MMM yyyy - HH:mm"))</div>
                <p>@item.CommentText</p>
            </div>
        </li>
        }
    </ul>
    @Html.Action("LeaveComment","Comment")
</div>
